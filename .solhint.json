{
  "extends": "solhint:recommended",
  "rules": {
    "max-line-lenght": 100,
    "compiler-fixed": "off",
    "compiler-version": ["error", "^0.5.0"],
    "indent": ["error", 4],
    "bracket-align": false,
    "no-simple-event-func-name": "off",
    "separate-by-one-line-in-contract": "off",
    "two-lines-top-level-separator": "off",
    "mark-callable-contracts": "off"
  }
}
